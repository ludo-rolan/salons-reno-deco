server {
    server_name lab.local.orange.fr;

    index index.php;
    #auth_basic_user_file /data/etc/htpasswd;
    #auth_basic "Restricted Area: Mini-sites";
    root /var/www/html;

    server_tokens off;

    #Vars 
    set $args_after  '' ;

    if ( $args != '' ) {
        set $args_after  '?${args}' ;
    }
    set $uri_before "$request_uri" ;
    # URL BEFORE rewrite
    if ($request_uri ~* "(.*)\?(.*)" ) {
        set $uri_before "$1" ;
    }

    # URL PURGE
    if ($uri_before ~* "/purge/(.*)" ) {
        set $uri_purge "/$1" ;
    }

    ## Mobile detection
    set $mobile_rewrite '';

    if ($http_user_agent ~* "(android|bb\d+|meego).+mobile|avantgo|bada\/|blackberry|blazer|compal|elaine|fennec|hiptop|iemobile|ip(hone|od)|iris|kindle|lge |maemo|midp|mmp|mobile.+firefox|netfront|opera m(ob|in)i|palm( os)?|phone|p(ixi|re)\/|plucker|pocket|psp|series(4|6)0|symbian|treo|up\.(browser|link)|vodafone|wap|windows ce|xda|xiino") {
        set $mobile_rewrite 1;
    }

    if ($http_user_agent ~* "^(1207|6310|6590|3gso|4thp|50[1-6]i|770s|802s|a wa|abac|ac(er|oo|s\-)|ai(ko|rn)|al(av|ca|co)|amoi|an(ex|ny|yw)|aptu|ar(ch|go)|as(te|us)|attw|au(di|\-m|r |s )|avan|be(ck|ll|nq)|bi(lb|rd)|bl(ac|az)|br(e|v)w|bumb|bw\-(n|u)|c55\/|capi|ccwa|cdm\-|cell|chtm|cldc|cmd\-|co(mp|nd)|craw|da(it|ll|ng)|dbte|dc\-s|devi|dica|dmob|do(c|p)o|ds(12|\-d)|el(49|ai)|em(l2|ul)|er(ic|k0)|esl8|ez([4-7]0|os|wa|ze)|fetc|fly(\-|_)|g1 u|g560|gene|gf\-5|g\-mo|go(\.w|od)|gr(ad|un)|haie|hcit|hd\-(m|p|t)|hei\-|hi(pt|ta)|hp( i|ip)|hs\-c|ht(c(\-| |_|a|g|p|s|t)|tp)|hu(aw|tc)|i\-(20|go|ma)|i230|iac( |\-|\/)|ibro|idea|ig01|ikom|im1k|inno|ipaq|iris|ja(t|v)a|jbro|jemu|jigs|kddi|keji|kgt( |\/)|klon|kpt |kwc\-|kyo(c|k)|le(no|xi)|lg( g|\/(k|l|u)|50|54|\-[a-w])|libw|lynx|m1\-w|m3ga|m50\/|ma(te|ui|xo)|mc(01|21|ca)|m\-cr|me(rc|ri)|mi(o8|oa|ts)|mmef|mo(01|02|bi|de|do|t(\-| |o|v)|zz)|mt(50|p1|v )|mwbp|mywa|n10[0-2]|n20[2-3]|n30(0|2)|n50(0|2|5)|n7(0(0|1)|10)|ne((c|m)\-|on|tf|wf|wg|wt)|nok(6|i)|nzph|o2im|op(ti|wv)|oran|owg1|p800|pan(a|d|t)|pdxg|pg(13|\-([1-8]|c))|phil|pire|pl(ay|uc)|pn\-2|po(ck|rt|se)|prox|psio|pt\-g|qa\-a|qc(07|12|21|32|60|\-[2-7]|i\-)|qtek|r380|r600|raks|rim9|ro(ve|zo)|s55\/|sa(ge|ma|mm|ms|ny|va)|sc(01|h\-|oo|p\-)|sdk\/|se(c(\-|0|1)|47|mc|nd|ri)|sgh\-|shar|sie(\-|m)|sk\-0|sl(45|id)|sm(al|ar|b3|it|t5)|so(ft|ny)|sp(01|h\-|v\-|v )|sy(01|mb)|t2(18|50)|t6(00|10|18)|ta(gt|lk)|tcl\-|tdg\-|tel(i|m)|tim\-|t\-mo|to(pl|sh)|ts(70|m\-|m3|m5)|tx\-9|up(\.b|g1|si)|utst|v400|v750|veri|vi(rg|te)|vk(40|5[0-3]|\-v)|vm40|voda|vulc|vx(52|53|60|61|70|80|81|83|85|98)|w3c(\-| )|webc|whit|wi(g |nc|nw)|wmlb|wonu|x700|yas\-|your|zeto|zte\-)") {
        set $mobile_rewrite 1;
    }

    set $no_cache 0;

    # POST requests and urls with a query string should always go to PHP
    if ($request_method = POST) {
        set $no_cache 1;
    }

    if ($request_uri ~* "(/wp-admin/|/xmlrpc.php|/wp-(app|cron|login|register|mail).php|wp-.*.php)") {
        set $no_cache 1;
    }

    # Don't use the cache for logged in users or recent commenters
    if ($http_cookie ~* "action_vote|rw_quizz|comment_author|wordpress_[a-f0-9]+|wp-postpass|wordpress_no_cache|wordpress_logged_in|wassup") {
        set $no_cache 1;
    }

    #Disable the cache for Siege request
    if ( $http_user_agent ~* "Siege" ){
        set $no_cache 1;
    }
    if ($request_uri ~* "(/orange_posts/)") {
        set $no_cache 0;
    }

    set $key_cache "$mobile_rewrite$scheme$request_method$host$uri_before$args_after";
    set $cache_key_purge "$mobile_rewrite$scheme$request_method$host$uri_purge$args_after";

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~* (wp-login)\.php$ {

        fastcgi_pass phpfpm:9000;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME    $document_root$fastcgi_script_name;
        fastcgi_param SCRIPT_NAME        $fastcgi_script_name;
        fastcgi_param IS_MOBILE $mobile_rewrite;
        fastcgi_param IS_HTTPS_CF $scheme;
        fastcgi_param MOBILE_DEVICE $mobile_device;
        
        fastcgi_no_cache 1;
        fastcgi_cache_bypass 1;
        fastcgi_pass_header Set-Cookie;
        fastcgi_ignore_headers Cache-Control  Expires ;
        fastcgi_hide_header Non-Set-Cookie;

    }
    location ~* \.php$ {
        fastcgi_pass phpfpm:9000;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME    $document_root$fastcgi_script_name;
        fastcgi_param SCRIPT_NAME        $fastcgi_script_name;
        fastcgi_param IS_MOBILE $mobile_rewrite;
        fastcgi_param IS_HTTPS_CF $scheme;
        fastcgi_param IS_MOBILE $mobile_rewrite;
        fastcgi_param MOBILE_DEVICE $mobile_device;

        #cache
        fastcgi_cache WORDPRESS;
        fastcgi_cache_valid 200 60m;
        fastcgi_cache_valid 502 1m;
        fastcgi_cache_key "$key_cache";
        fastcgi_cache_bypass $no_cache;
        fastcgi_no_cache $no_cache;
        add_header "X-NGINX-Cache" "$upstream_cache_status";


    }
    
    location ~* ^.+\.(ogg|ogv|svg|svgz|eot|otf|woff|woff2|mp4|ttf|rss|atom|jpg|jpe|jpeg|gif|png|ico|zip|tgz|gz|rar|bz2|doc|xls|exe|ppt|tar|mid|midi|wav|bmp|rtf|js|css|swf)$ {
        add_header 'Access-Control-Allow-Origin' "*";
        access_log off; log_not_found off; expires max;
    } 
    
    location ~* \.(png|jpg|jpeg|gif|ico|jpe|css|js|woff2)$ {
      gzip on;
      expires max;
    }
    
    location ~ /purge/(.*) {
        allow              all;
        fastcgi_cache_purge  WORDPRESS "$cache_key_purge" ;
    }

    listen 80;
} 